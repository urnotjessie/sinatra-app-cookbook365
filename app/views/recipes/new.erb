<div class="card bg-light">
  <div class="card-header text-center">
    <h4>Add new recipe</h4>
  </div>
  <div class="card-body">
    <% if flash.include?(:message) %>
      <p style="color:#f0ad4e;"><%= flash[:message] %> </p>
    <% end %>
    
    <form action="/recipes/new" method="post">
      <div class="form-group row">
        <label for="recipe_name" class="col-sm-2 col-form-label">Recipe name</label>
        <div class="col-sm-10">
          <input class="form-control" type="text" name="recipe_name">
        </div>
      </div>

      <div class="form-group row">
        <label for="serving_size" class="col-sm-2 col-form-label">Serving size</label>
        <div class="col-sm-10">
          <input class="form-control" type="text" name="serving_size">
        </div>
      </div>

      <div class="form-group row">
        <label for="cook_time" class="col-sm-2 col-form-label">Cook time</label>
        <div class="col-sm-10">
          <input class="form-control" type="text" name="cook_time">
        </div>
      </div>

      <div class="form-group row">
        <label for="ingredients" class="col-sm-2 col-form-label">Ingredients</label>
        <div class="col-sm-10">
          <textarea class="form-control" type="text" name="ingredients" rows="3"></textarea>
        </div>
      </div>

      <div class="form-group row">
        <label for="method" class="col-sm-2 col-form-label">Method</label>
        <div class="col-sm-10">
          <textarea class="form-control" type="text" name="method" rows="5"></textarea>
        </div>
      </div>

      <button type="submit" class="btn btn-secondary btn-lg btn-block">Submit</button>
    </form>
  </div>
</div>

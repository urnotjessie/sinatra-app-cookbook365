<!doctype html>
<html>
  <head>
    <title>Cookbook 365</title>

    <!-- CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">

  </head>

  <body>

    <!-- *** Header *** -->
    <header style="background-color: hsla(52, 3%, 67%, 0.67);">
      <div class="row header">
        <div class="col-sm-12">
          <h2>Cook with us!</h2>
          <h3>Share Your Recipes and Get Inspired</h3>
        </div>
      </div>
    </header>

    <!-- *** NAVBAR *** -->
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: hsla(52, 3%, 67%, 0.67);">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link text-dark" href="/recipes">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" href="/account/<%= current_user.slug %>">My Account</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" href="/logout">Log Out</a>
          </li>
        </ul>
        <span class="navbar-text text-dark">Welcome <%= current_user.username %></span>
      </div>
    </nav>

    <div class="container">
      <br></br>
      <%= yield %>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

  </body>
</html>
